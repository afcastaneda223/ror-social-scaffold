<%= form_for(@post) do |form| %>
<%= form.label :content %>
<%= form.text_field :content, id: :post_content, class: 'form-control', placeholder: 'Add New Post' %>
<%= display_errors(@post) %>
<%= form.submit 'Save', class: 'btn btn-primary' %>
<% end %>

<article class="timeline">
    <h3>
        Recent posts
    </h3>
    <ul class="posts">
        <%= render @timeline_posts %>
    </ul>
</article>
<ul class="pending-req">
    <h2>Pending requests:</h2>
    <% @pendings.each do |pending|%>
    <br><p><%= link_to pending.receiver.name, user_path(pending.receiver.id) %> <%= link_to "Accept", edit_friendship_path(pending.id), method: :get, class:"accept-btn" %> </p>
    <% end %>
</ul>
